<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="WirklichDigital\AuthenticationMail\Entity\AuthenticationMail" repository-class="WirklichDigital\DynamicEntityModule\Repository\DynamicEntityRepository">
    <indexes>
      <index name="index_email" columns="email"/>
      <index name="index_isActive" columns="isActive"/>
      <index name="index_passwordExpires" columns="passwordExpires"/>
      <index name="index_isActive_passwordExpires" columns="isActive,passwordExpires"/>
      <index name="index_email_isActive_passwordExpires" columns="email,isActive,passwordExpires"/>
    </indexes>
    <id name="id" type="integer">
      <generator strategy="AUTO"/>
    </id>
    <field name="email" type="string" unique="1"/>
    <field name="password" type="string" nullable="1"/>
    <field name="passwordExpires" type="datetime" nullable="1"/>
    <field name="isActive" type="boolean"/>
    <many-to-one field="user" target-entity="WirklichDigital\Authentication\Entity\User" inversed-by="authenticationMails"/>
    <one-to-many field="authMailResets" target-entity="WirklichDigital\AuthenticationMailForgotPassword\Entity\AuthMailReset" mapped-by="authMail">
      <cascade>
        <cascade-remove/>
      </cascade>
    </one-to-many>
  </entity>
</doctrine-mapping>
